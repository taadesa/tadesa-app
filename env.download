
import React from 'react';
import { Category, UserStats } from '../types';
import { wordBank } from '../data/wordBank';

interface TopicsProps {
  onSelectTopic: (category: Category) => void;
  onBack: () => void;
  stats: UserStats;
}

const Topics: React.FC<TopicsProps> = ({ onSelectTopic, onBack, stats }) => {
  const categories: { name: Category, icon: string, color: string }[] = [
    { name: 'Travel', icon: 'flight', color: 'bg-blue-500' },
    { name: 'Food', icon: 'restaurant', color: 'bg-orange-500' },
    { name: 'Technology', icon: 'computer', color: 'bg-cyan-500' },
    { name: 'Work', icon: 'work', color: 'bg-indigo-500' },
    { name: 'Sports', icon: 'sports_soccer', color: 'bg-emerald-500' },
    { name: 'Emotions', icon: 'mood', color: 'bg-pink-500' },
    { name: 'Nature', icon: 'park', color: 'bg-green-500' },
  ];

  const getProgress = (category: Category) => {
    const total = wordBank.filter(w => w.category === category).length;
    const learned = wordBank.filter(w => w.category === category && stats.learnedWordsIds.includes(w.id)).length;
    return Math.round((learned / (total || 1)) * 100);
  };

  return (
    <div className="pb-32 pt-8 px-6">
      <header className="flex items-center gap-4 mb-8">
        <button onClick={onBack} className="w-10 h-10 flex items-center justify-center bg-white rounded-full shadow-sm">
          <span className="material-icons">arrow_forward</span>
        </button>
        <h1 className="text-2xl font-bold text-slate-900">בחר נושא לימוד</h1>
      </header>

      <div className="grid grid-cols-1 gap-4">
        {categories.map(cat => {
          const progress = getProgress(cat.name);
          return (
            <button 
              key={cat.name}
              onClick={() => onSelectTopic(cat.name)}
              className="bg-white p-5 rounded-2xl border border-slate-100 shadow-sm flex items-center gap-5 group hover:border-primary transition-all text-right"
            >
              <div className={`${cat.color} w-14 h-14 rounded-2xl flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform`}>
                <span className="material-icons text-2xl">{cat.icon}</span>
              </div>
              <div className="flex-1">
                <div className="flex justify-between items-center mb-2">
                  <h3 className="font-bold text-slate-800">{cat.name}</h3>
                  <span className="text-[10px] font-bold text-slate-400">{progress}% הושלם</span>
                </div>
                <div className="w-full h-1.5 bg-slate-100 rounded-full overflow-hidden">
                  <div className={`h-full ${cat.color} transition-all duration-1000`} style={{ width: `${progress}%` }}></div>
                </div>
              </div>
              <span className="material-icons text-slate-300">chevron_left</span>
            </button>
          );
        })}
      </div>
    </div>
  );
};

export default Topics;
